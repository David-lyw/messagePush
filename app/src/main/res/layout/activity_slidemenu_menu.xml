<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:background="@mipmap/menu_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_0"
            style="@style/menu_text"
            android:background="#33663300"
            android:drawableLeft="@mipmap/ic_launcher"
            android:text="新闻" />

        <TextView
            android:id="@+id/tv_1"
            style="@style/menu_text"
            android:drawableLeft="@mipmap/ic_launcher"
            android:text="订阅" />

        <TextView
            android:id="@+id/tv_2"
            style="@style/menu_text"
            android:drawableLeft="@mipmap/ic_launcher"
            android:text="本地" />

        <TextView
            android:id="@+id/tv_3"
            style="@style/menu_text"
            android:drawableLeft="@mipmap/ic_launcher"
            android:text="跟贴" />

        <TextView
            android:id="@+id/tv_4"
            style="@style/menu_text"
            android:drawableLeft="@mipmap/ic_launcher"
            android:text="图片" />

        <TextView
            android:id="@+id/tv_5"
            style="@style/menu_text"
            android:drawableLeft="@mipmap/ic_launcher"
            android:text="话题" />

        <TextView
            android:id="@+id/tv_6"
            style="@style/menu_text"
            android:drawableLeft="@mipmap/ic_launcher"
            android:text="投票" />

        <TextView
            android:id="@+id/tv_slidemenu_readtogether"
            style="@style/menu_text"
            android:drawableLeft="@mipmap/ic_launcher"
            android:text="聚合阅读" />

    </LinearLayout>


</ScrollView>